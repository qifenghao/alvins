<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.alvin.app02mybatis.mapper.BlogMapper">
    <resultMap id="detailedBlogResultMap" type="org.alvin.app02mybatis.pojo.DetailedBlog">
<!--        <id property="id" column="blog_id"/>-->
        <constructor>
            <idArg column="blog_id" javaType="int"/>
        </constructor>
        <result property="title" column="blog_title"/>
        <association property="author" javaType="org.alvin.app02mybatis.pojo.Author">
            <id property="id" column="author_id"/>
            <result property="username" column="author_username"/>
            <result property="password" column="author_password"/>
            <result property="email" column="author_email"/>
            <result property="bio" column="author_bio"/>
            <result property="favouriteSection" column="author_favourite_section"/>
        </association>
        <collection property="posts" ofType="Post">
            <id property="id" column="post_id"/>
            <result property="createdOn" column="post_create_on"/>
            <result property="section" column="post_section"/>
            <result property="subject" column="post_subject"/>
        </collection>
    </resultMap>

    <select id="selectBlog" resultType="org.alvin.app02mybatis.pojo.Blog">
        select * from Blog where id = #{id}
    </select>

    <insert id="insertBlog" parameterType="org.alvin.app02mybatis.pojo.Blog">
        insert into Blog (title, author_id) values (#{title}, #{authorId})
    </insert>

    <select id="selectBlogDetails" resultMap="detailedBlogResultMap">
        select b.id as blog_id,
               b.title as blog_title,
               b.author_id as blog_author_id,
               a.id as author_id,
               a.username as author_username,
               a.password as author_password,
               a.email as author_email,
               a.bio as author_bio,
               a.favourite_section as author_favourite_section,
               p.id as post_id,
               p.blog_id as post_blog_id,
               p.author_id as post_author_id,
               p.created_on as post_create_on,
               p.section as post_section,
               p.subject as post_subject
          from blog b
          left join author a on a.id = b.author_id
          left join post p on p.blog_id = b.id
         where b.id = #{id}
    </select>
</mapper>
